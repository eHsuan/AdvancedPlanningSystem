<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net>
    <appender name="SystemAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log\\" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <datePattern value="yyyyMMdd'\\System\\'HH'.txt'" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level - %message%newline" />
      </layout>
    </appender>
    <appender name="MesAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log\\" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <datePattern value="yyyyMMdd'\\MES\\'HH'.txt'" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level - %message%newline" />
      </layout>
    </appender>
    <appender name="DispatchAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log\\" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <datePattern value="yyyyMMdd'\\Dispatch\\'HH'.txt'" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level - %message%newline" />
      </layout>
    </appender>
    <appender name="ScoreAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log\\" />
      <appendToFile value="true" />
      <rollingStyle value="Composite" />
      <datePattern value="yyyyMMdd'\\Score\\'HH'.txt'" />
      <staticLogFileName value="false" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="SystemAppender" />
    </root>
    <logger name="MES">
      <level value="DEBUG" />
      <additivity value="false" />
      <appender-ref ref="MesAppender" />
    </logger>
    <logger name="Dispatch">
      <level value="DEBUG" />
      <additivity value="false" />
      <appender-ref ref="DispatchAppender" />
    </logger>
    <logger name="Score">
      <level value="DEBUG" />
      <additivity value="false" />
      <appender-ref ref="ScoreAppender" />
    </logger>
  </log4net>

    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
</configuration>
